<div class="page-header">
  <h1>
    Your Tweets

    {{#if model.length}}
      {{#link-to 'tweets.new'}}
        {{#bs-button type="primary" buttonType="button" classNames="btn-xs"}}
          Add Tweet
        {{/bs-button}}
      {{/link-to}}
    {{/if}}
  </h1>
</div>

<div class="list-group">
  {{#each model as |tweet_item|}}
    <a class="list-group-item">
      <a {{action 'gotoTweet' tweet_item}}>
        <h4>
          {{tweet_item.message}}
        </h4>

        <p><span class="u-capitalize">{{tweet_item.status}}</span> {{moment-from-now tweet_item.scheduled}}</p>
      </a>
    </a>
  {{else}}
    <div class="list-group-item">
      No tweets found.

      {{#link-to "tweets.new"}}
        Why don't you make one?
      {{/link-to}}
    </div>
  {{/each}}
</div>

{{outlet}}
