{{bs-form-element
  showValidation=true
  hasValidator=true
  errors=model.errors.message
  warnings=model.warnings.message
  controlType="textarea"
  label="Message"
  placeholder="Message"
  property="model.message"
}}

{{#bs-form-element
  showValidation=true
  hasValidator=true
  errors=model.errors.scheduled
  warnings=model.warnings.scheduled
  label="Scheduled"
}}
  {{bs-datetimepicker
    forceDateOutput=true
    date=model.scheduled
    format="MMMM Do YYYY h:mm A"
    placeholder="Please select a date ..."
    updateDate=(action (mut model.scheduled))
  }}
{{/bs-form-element}}

{{yield}}
