{{bs-form-element
  controlType="textarea"
  label="Message"
  placeholder="Message"
  property="model.message"
}}

{{#bs-form-element
  label="Scheduled"
}}
  {{bs-datetimepicker
    forceDateOutput=true
    date=model.scheduled
    format="MMMM Do YYYY h:mm A"
    placeholder="Please select a date ..."
    updateDate=(action (mut model.scheduled))
  }}
{{/bs-form-element}}

{{yield}}
