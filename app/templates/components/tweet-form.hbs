{{bs-form-element controlType="textarea" label="Message" placeholder="Message" property="model.message"}}

{{#bs-form-element label="Scheduled"}}
  {{pikaday-input
    value=model.scheduled
    classNames="form-control"
    format="MMMM Do YYYY"
    placeholder="Please select a date ..."
    onSelection=(action (mut model.scheduled))
  }}
{{/bs-form-element}}

{{#bs-form-element label="Status"}}
  {{#power-select
    searchEnabled=false
    selected=ctrl.model.status
    options=ctrl.statuses
    onchange=(action (mut model.status))
    placeholder="Please select ..."
    as |status|
  }}
    {{status}}
  {{/power-select}}
{{/bs-form-element}}

{{yield}}
